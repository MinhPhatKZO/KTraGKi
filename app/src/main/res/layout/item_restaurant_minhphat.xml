<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#E1BEE7"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:backgroundTint="#AB47BC"
    android:elevation="2dp"
    >

    <ImageView
        android:id="@+id/imgRes_MinhPhat"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_restaurant"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtResName_MinhPhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quán bánh mì cô Ba"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtResAddress_MinhPhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hẻm 68 Bùi Thị Xuân, quận Tân Bình"
            android:textColor="#FCE4EC"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnSave_MinhPhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LƯU THÔNG TIN"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:backgroundTint="#FF4081"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</LinearLayout>
